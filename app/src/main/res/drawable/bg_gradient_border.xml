<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:useLevel="false"
                android:angle="0"
                android:startColor="@color/accent_orange"
                android:centerColor="@color/accent_pink"
                android:endColor="@color/accent_purple" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_purple" />
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>
